# Wallet private key for server-side contract interactions
# IMPORTANT: This wallet must have the GAME_ROLE on the contract to call updatePlayerData
# Make sure this wallet has enough MON tokens for gas fees
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Use: openssl rand -hex 32
NEXT_PUBLIC_APP_URL=your_public_app_url_here

# Optional: Custom RPC URL for Monad Testnet
# NEXT_PUBLIC_RPC_URL=https://monad-testnet-rpc.example.com

# Privy App ID for authentication
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Monad Games ID for leaderboard integration
# This ID allows players to save scores to the leaderboard
NEXT_PUBLIC_MONAD_GAMES_ID=your_public_monad_games_id_here